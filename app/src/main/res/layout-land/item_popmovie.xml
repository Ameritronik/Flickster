<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lvPopMovie"
    style="@style/Base.TextAppearance.AppCompat.Inverse"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bkgd_brdr"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ivMovieImagePopLand"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription,RtlHardcoded"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="117dp"
        android:layout_toStartOf="@+id/tvOverview"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/youtube_light_color_icon"
        tools:ignore="ContentDescription,UnusedAttribute" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/ivMovieImagePopLand"
        android:background="@drawable/pop_bkgd"
        android:elevation="1dp"
        android:outlineProvider="background"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="RelativeOverlap,RtlHardcoded,UnusedAttribute"
        tools:text="@string/textview" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivMovieImagePopLand"
        android:layout_toRightOf="@+id/ivMovieImagePopLand"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded"
        tools:text="When a wounded Christian Grey tries to entice a cautious Ana Steele back into his life, she demands a new arrangement before she will give him another chance. As the two begin to build trust and find stability, shadowy figures from Christianâ€™s past start to circle the couple, determined to destroy their hopes for a future together." />

</RelativeLayout>